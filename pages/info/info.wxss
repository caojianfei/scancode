.container {
  padding: 10px;
}

.info {
  background: #fff;
  padding: 10px;
  border: 1px solid #e0e0e0;
}

.info:not(:first-child) {
  margin-top: 20px;
}

.info-row {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-bottom: 5px;
  font-size: 14px;
  justify-content: space-between;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row-title {
  min-width: 75px;
}

.info-row-content {
  color: #353535;
}

.status {
  display: flex;
  flex-direction: row;
  margin-top: 20px;
}

.status-icon {
  width: 32px;
  height: 32px;
  font-size: 16px;
}

.status-content {
  height: 32px;
  line-height: 32px;
  margin-left: 10px;
}

.footer {
  margin-top: 30px;
}

.options {
  width: 100%;
  text-align: center;
}

.options button {
  width: 150px;
  height: 35px;
  line-height: 35px !important;
}

.consum-num {
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
  justify-content: space-between;
  width: 100%;
  align-items: center;
}

.consum-num label {
  font-size: 14px;
  width: 30%;
}

.consum-num input {
  background: #fff;
  border: 1px solid #e0e0e0;
  padding-left: 10px;
  width: 70%;
  /* margin-bottom: 5px;
  padding: 5px; */
}

.consum-tip {
  font-size: 12px;
  color: #888;
}

.hexiao {
  margin-left: 20px;
}
